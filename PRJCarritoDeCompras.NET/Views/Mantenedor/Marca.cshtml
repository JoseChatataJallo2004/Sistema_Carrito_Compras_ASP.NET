
@{
    ViewBag.Title = "Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<ol class="breadcrumb mb-4 mt-4 m-lg-3">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Marcas</li>
</ol>

<div class="card">
    <div class="card-header">
        <i class="fas fa-users"></i> Lista Marcas
    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo</button>
            </div>
        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width:100%">
            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Activo</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>



<!-- Modal  esl databsbackdrop es para cerra en el x  y no cerrar en cualquier parte -->
<div class="modal fade" id="FormModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-dark text-white">
                <h5 class="modal-title" id="exampleModalLabel"> Marca </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body ">
                <input id="txtid" type="hidden" value="0" />

                <div class="row g-1">



                    <div class="col-sm-6">
                        <label for="txtdescripcion" class="form-label">Descripcion</label>
                        <input type="email" class="form-control" id="txtdescripcion" autocomplete="off">
                    </div>

                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo?</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>

                        </select>
                    </div>



                </div>
                <div class="row mt-2">
                    <div class="col-12">
                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert—check it out!
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-primary" onclick="guardar()"> Guardar </button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    <script>

        var tabladata;
        var filaseleccionada;
        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarMarca", "Mantenedor")',
                type: 'GET',
                dataType: 'json'
            },
            "columns": [
                { "data": "descripcion" },
                {
                    "data": "activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">Si</span>'
                        } else {
                            return '<span class="badge bg-danger">No</span>'
                        }
                    }
                },
                //botones
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"> <i class="fas fa-pen"></i></button> ' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"> <i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width": "90px"
                }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.13.5/i18n/es-ES.json"
            }

        });
        //llamar al formulario de crear nuevo categoria
        function abrirModal(json) {

            //limpiarlo
            $("#txtid").val(0);
            $("#txtdescripcion").val("");
            $("#cboactivo").val(1);

            $("#mensajeError").hide();


            if (json !=null) {
                //para llamar los json.nombres debo llamarlo desde la console
                $("#txtid").val(json.idmarca);
                $("#txtdescripcion").val(json.descripcion);
                $("#cboactivo").val(json.activo ==true ?1:0);
            }
            $("#FormModal").modal("show");
        }

        //llamar al metodo editar dentro de la tabla pero que se ejecute en el form que se crea con los datos dentro
        $("#tabla tbody").on("click", '.btn-editar', function () {
            //this obetener la fila que yo he presionado
             filaseleccionada = $(this).closest("tr");
            var data = tabladata.row(filaseleccionada).data();
            console.log(data);
            abrirModal(data)
        })

        //para eliminar
        $("#tabla tbody").on("click", '.btn-eliminar', function () {
            //this obetener la fila que yo he presionado
            var marcaseleccionado = $(this).closest("tr");
            var data = tabladata.row(marcaseleccionado).data();

            swal({
                title: "Estas seguro ?",
                text: "¿Desea eliminar la marca ?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Si",
                cancelButtonText: "No",
                closeOnConfirm: true
            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("Eliminarmarca", "Mantenedor")',
                        type: "POST", //parametro id es del mismo controlador
                        data: JSON.stringify({ id: data.idmarca }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(marcaseleccionado).remove().draw();

                            } else {
                                swal("No se pudo eliminar ", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        },
                        beforeSend: function () {

                        },

                    })
                });


            console.log(data);

        })

        //nuestro objeto
        function guardar(){
            var marca = {
                idmarca
                    :
                    $("#txtid").val(),
                activo: $("#cboactivo").val() ==1 ? true:false,
                    descripcion
                                        :
                        $("#txtdescripcion").val()



            }


            jQuery.ajax({
                url: '@Url.Action("Guardarmarca", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({ obj: marca }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {
                    //debugger;
                    //categoria nuevo
                    if (marca.idmarca == 0) {
                        if (data.resultado != 0) {
                            marca.idmarca = data.resultado;
                            tabladata.row.add(marca).draw(false);
                            $("#FormModal").modal("hide");

                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }

                    }//categoria ediatr
                    else {
                        if (data.resultado) {
                            tabladata.row(filaseleccionada).data(marca).draw(false);
                            filaseleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                   // console.log(data)
                },
                error: function (error) {
                    console.log(error)
                },
                beforeSend: function () {

                },
            })





            //$("#FormModal").modal("hide");
        }

    </script>

}
